<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DistanceCalculator">


    <TextView
        android:id="@+id/stepView"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_below="@+id/height"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="99dp"
        android:text="Step Count: 0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/thresholdView"
        android:layout_width="167dp"
        android:layout_height="35dp"
        android:layout_below="@+id/Distance"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="0dp"
        android:text="Threshold Value"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thresholdView"
        android:layout_marginTop="58dp" />

    <ToggleButton
        android:id="@+id/countToggle"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/seek"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"

        android:layout_marginEnd="105dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textOff="Not Walking"
        android:textOn="Walking" />

    <EditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter your height in cm"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countToggle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="158dp"
        android:background="@android:color/holo_green_light"
        android:onClick="onButtonSend1"
        android:text="@string/send"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/Distance"
        android:layout_width="216dp"
        android:layout_height="51dp"
        android:layout_below="@+id/stepView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="97dp"
        android:text="Distance: 0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />
</RelativeLayout>

